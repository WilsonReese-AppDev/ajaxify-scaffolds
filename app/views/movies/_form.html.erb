<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "movies/form_title", form: form %>

  <td class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </td>

  <td class="field">
    <%= form.label :director_id %>
    <%= form.collection_select :director_id, Director.order(:name), :id, :name, {} %>
  </td>

  <td class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </td>

  <td class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration %>
  </td>

  <td class="field" type="hidden">
    <%= form.hidden_field :image %>
  </td>

  <td class="actions">
    <%= form.submit %>
  </td>
<% end %>
