<% if form %>
  <%= form.label :description %>
  <%= form.text_area :description %>
<% else %>
  <div id="<%= dom_id(@movie) %>_description_form">
    <%= form_with(model: @movie, local: false) do |f| %>
      <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
<% end %>